<%= form_with(model: [post, post.comments.build], id: "comment-form") do |form| %>
  <%# Campo hidden per capire se Ã¨ una modifica %>
  <%= hidden_field_tag :comment_id, nil, id: "comment_id_input" %>

  <div class="field">
    <%= form.label :'Scrivi il tuo commento!', class: "post-title", style: "margin-top:0.5em; margin-bottom:0.5em; font-size:2.1em;" %>
    <%= form.text_area :content, id: "comment_content", style: "width:75%; min-height:12em; resize:none;", required: true, autocomplete: "off" %>
  </div>

  <div class="post-actions" style="margin-bottom: 1em;">
    <%= form.submit "Pubblica", class: "btn forum-button2", id: "submit-comment-button" %>
    <button type="button" class="btn forum-button2" id="cancel-edit-button" style="display:none; margin-left: 1em;">Annulla Modifica</button>
  </div>
<% end %>
