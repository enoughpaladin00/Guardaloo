<%= form_with(model: [post, post.comments.build]) do |form| %>
  <div class="field">
    <%= form.label :'Scrivi il tuo commento!', class:"post-title",style:"margin-top:0.5em; margin-bottom:0.5em; font-size:2.1em;" %>
    <%= form.text_area :content, style:"width:75%; min-height:12em; resize:none;", required: true, autocomplete:"off" %>
  </div>

  <div style="margin-bottom: 1em;" class="post-actions"><%= form.submit "Pubblica", class: "btn forum-button2" %></div>
<% end %>

