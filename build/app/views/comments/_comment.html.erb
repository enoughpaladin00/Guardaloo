<div class="post-card2">
  <p class="post-content"><%= comment.content %></p> <!-- contenuto commento-->
  <% if comment.created_at %>
    <p>Creato <%= time_ago_in_words(comment.created_at) %> fa da <%= @post.user.username %> </p> <!-- indicazione temporale e autore commento-->
  <% else %>
    <p><small>Pubblicato recentemente</small></p>
  <% end %>
  
  <% if comment.user == current_user %>
    <%= button_to 'Cancella', [comment.post, comment], method: :delete, data: { confirm: 'Sei sicuro?' }, class: "btn btn-sm btn-danger post-actions" %> <!-- cancella il commento -->
    <%# <%= link_to 'Modifica', edit_post_comment_path(comment.post, comment), class: "btn btn-sm btn-primary" %> <!-- modifica ?-->    
  <% end %>
</div>

