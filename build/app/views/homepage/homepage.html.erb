    <div class="slider-track">
        <% @top_movies.each_with_index do |movie, index| %>
        
            <div class="contenitore" style="margin: 4em; overflow: visible;">
                <a href="#"><img style="border-radius: 1.3em" src="https://image.tmdb.org/t/p/w500<%= movie['poster_path'] %>" alt="<%= movie['title'] %>" width="auto" height="339em" >
                <span class="number"><b><%= index + 1 %></b></span></a>
            </div>

        <%end%>
    </div>
    <button class="slider-btn right">&#10095;</button>
</div>

