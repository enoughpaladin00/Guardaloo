<!--Navbar-->
<%= render 'layouts/navbar' %>


<% if user_signed_in? %>      <!-- controllo utente autenticato, scritte opzionali -->
    Benvenuto, <%= current_user.first_name %>!
<% else %>
    <h1>NON SEI REGISTRATO!</h1>  
    <button  class="sign-up popup-button auth-button ">Registrati</button>
    <button  class="yellow-button popup-button auth-button">Accedi</button>
<% end %>   


<h1>Forum</h1>

<button class="btn sign-up popup-button auth-button " ><%= link_to "Scrivi un nuovo Post", new_post_path %></button> <!-- rimando a -> new.html.erb -->

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= link_to post.title, post %></h2> Creato da <%= post.user.username %>
      <p><%= truncate(post.content, length: 100) %></p>
      <p><%= pluralize(post.comments.count, 'comment') %></p>
    </div>
  <% end %>
<% else %>
  <p>Non ci sono post nel forum.</p>
<% end %>

<!--8 section "Footer"-->
<%= render 'layouts/footer' %>orum